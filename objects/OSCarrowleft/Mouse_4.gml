if global.wheelspinonscreen = true
{
	switch global.selection
	{
		case 1: global.selection = 8
		break;
		
		case 2: global.selection = 1
		break;
		
		case 3: global.selection = 2
		break;
		
		case 4: global.selection = 3
		break;
		
		case 5: global.selection = 4
		break;
		
		case 6: global.selection = 5
		break;
		
		case 7: global.selection = 6
		break;
		
		case 8: global.selection = 7
		break;
	}
}